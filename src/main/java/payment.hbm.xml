<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.ecomm.dbentity.Payment" table="IRON_PAYMENT">
		<id name="paymentId" column="PAYMENT_ID">
			<generator class="sequence"/>
		</id>
		<property name="orderId" column="ORDER_ID"/>
		<property name="paymentAmount" column="PAYMENT_AMOUNT"/>
		<property name="paymentMode" column="PAYMENT_MODE"/>
		<property name="paymentDate" column="PAYMENT_DATE"/>
	</class>
</hibernate-mapping>  