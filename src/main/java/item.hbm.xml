<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.ecomm.dbentity.Item" table="IRON_ITEM">
		<id name="itemId" column="ITEM_ID">
			<generator class="sequence"/>
		</id>
		<property name="itemName" column="ITEM_NAME"/>
		<property name="itemSize" column="ITEM_SIZE"/>
		<property name="itemDetails" column="ITEM_DETAILS"/>
		<property name="cost" column="COST"/>
	</class>
</hibernate-mapping>  